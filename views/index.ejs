<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Organic - Grocery Store HTML Website Template</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="format-detection" content="telephone=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="author" content="">
    <meta name="keywords" content="">
    <meta name="description" content="">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="css/vendor.css">
    <link rel="stylesheet" type="text/css" href="style.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&family=Open+Sans:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
  </head>
  <body>
    <%- include('partials/navbar') %>
    <!-- Header -->
    <header>
      <div class="container-fluid">
        <div class="row py-3 border-bottom">
          <div class="col-sm-4 col-lg-2 text-center">
            <a href="index.html">
              <img src="images/logo.svg" alt="logo" class="img-fluid">
            </a>
          </div>
          <div class="col-sm-6 col-lg-4">
            <!-- Search bar -->
            <div class="search-bar bg-light p-2 rounded-4">
              <form action="index.html" method="post">
                <input type="text" class="form-control border-0 bg-transparent" placeholder="Search for products">
              </form>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Banner Section -->
    <section style="background-image: url('images/banner-1.jpg'); background-size: cover;">
      <div class="container-lg">
        <div class="row">
          <div class="col-lg-6 pt-5 mt-5">
            <h2 class="display-1">Organic Foods at your Doorsteps</h2>
            <p class="fs-4">Dignissim massa diam elementum.</p>
            <div class="d-flex gap-3">
              <a href="#" class="btn btn-primary text-uppercase">Start Shopping</a>
              <a href="#" class="btn btn-dark text-uppercase">Join Now</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <%- include('partials/menu') %>
    <%- include('partials/product') %>
    <%- include('partials/banner') %>
    <%- include('partials/carousel') %>
    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/plugins.js"></script>
    <script src="js/script.js"></script>
  </body>
</html>
